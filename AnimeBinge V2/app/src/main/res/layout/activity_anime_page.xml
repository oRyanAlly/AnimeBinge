<?xml version="1.0" encoding="utf-8"?>
<android.widget.RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tbMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize"/>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tbMenu"
        android:layout_centerHorizontal="true"
        app:srcCompat="@drawable/animebinge" />

    <ImageView
        android:id="@+id/selectedAnime"
        android:layout_width="200dp"
        android:layout_height="270dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tbMenu"
        android:layout_marginTop="12dp"
        app:srcCompat="@drawable/toradora" />

    <TextView
        android:id="@+id/animeName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/selectedAnime"
        android:layout_toEndOf="@+id/selectedAnime"
        android:layout_toRightOf="@+id/selectedAnime"
        android:fontFamily="sans-serif"
        android:text=""
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/animeScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/selectedAnime"
        android:layout_marginTop="25dp"
        android:layout_toEndOf="@+id/selectedAnime"
        android:layout_toRightOf="@+id/selectedAnime"
        android:fontFamily="sans-serif"
        android:text="AVG. Score:"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="12dp"/>

    <TextView
        android:id="@+id/animeType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/animeScore"
        android:layout_marginTop="11dp"
        android:layout_toEndOf="@+id/selectedAnime"
        android:layout_toRightOf="@+id/selectedAnime"
        android:fontFamily="sans-serif"
        android:text="Type:"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/animeStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/animeType"
        android:layout_marginTop="11dp"
        android:layout_toEndOf="@+id/selectedAnime"
        android:layout_toRightOf="@+id/selectedAnime"
        android:fontFamily="sans-serif"
        android:text="Status:"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/animeEPS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/animeStatus"
        android:layout_marginTop="13dp"
        android:layout_toEndOf="@+id/selectedAnime"
        android:layout_toRightOf="@+id/selectedAnime"
        android:fontFamily="sans-serif"
        android:text="EPS:"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/animeAired"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/animeEPS"
        android:layout_marginTop="14dp"
        android:layout_toEndOf="@+id/selectedAnime"
        android:layout_toRightOf="@+id/selectedAnime"
        android:fontFamily="sans-serif"
        android:text="Aired:"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="12dp"  />


</android.widget.RelativeLayout>